<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/green">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="30%"
                android:centerY="30%"
                android:startColor="@color/gradient_green"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="70%"
                android:centerY="30%"
                android:startColor="@color/gradient_blue"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="550dp"
                android:centerX="70%"
                android:centerY="90%"
                android:startColor="@color/gradient_red"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="30%"
                android:centerY="90%"
                android:startColor="@color/gradient_yellow"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>