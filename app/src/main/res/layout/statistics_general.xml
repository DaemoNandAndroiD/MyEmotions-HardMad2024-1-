<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gwen_trial_regular"
            android:text="@string/stat_general_title"
            android:textColor="@color/white"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/recordsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/velasans_regular"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/circle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="86dp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <FrameLayout
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top">

            <TextView
                android:id="@+id/circle_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/velasans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/circle2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="right|bottom">

            <TextView
                android:id="@+id/circle_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/velasans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/circle3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="left|bottom"
            android:translationZ="0dp">

            <TextView
                android:id="@+id/circle_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/velasans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/circle4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="right|top"
            android:translationZ="0dp">

            <TextView
                android:id="@+id/circle_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/velasans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </FrameLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>