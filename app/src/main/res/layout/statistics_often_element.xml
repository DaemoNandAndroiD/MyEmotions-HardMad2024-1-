<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_red_emote">
        </ImageView>

        <TextView
            android:id="@+id/emoteText"
            android:text="Продуктивность"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/velasans_regular"
            android:layout_gravity="center_vertical">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:id="@+id/stat_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="left"
        android:paddingHorizontal="16dp"
        android:background="@drawable/yellow_often_stat">
        <TextView
            android:id="@+id/emotion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="10%"
            android:fontFamily="@font/velasans_bold"/>
    </LinearLayout>

</LinearLayout>