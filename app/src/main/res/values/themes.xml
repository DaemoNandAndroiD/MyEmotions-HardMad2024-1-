<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HardMad20241" parent="Theme.Material3.Dark.NoActionBar" />
    <style name="Theme.AppCompat.NoActionBar"/>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/velasans_medium</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/velasans_regular</item>
    </style>

    <style name="CTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="chipStyle">@style/BaseTheme.Widget.Chip</item>
        <item name="materialTimePickerTitleStyle">@style/TitleText</item>
        <item name="colorSurface">@color/white</item>
    </style>


    <style name="BaseTheme.Widget.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/ChipText</item>
    </style>

    <style name="TitleText">
        <item name="android:text">Напоминание</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gwen_trial_regular</item>
    </style>

    <style name="ChipText">
        <item name="android:text">Напоминание</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/velasans_bold</item>
    </style>

    <style name="MyTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">#FF121212</item>
        <item name="android:textColorSecondary">#FFF9F9F9</item>
        <item name="colorPrimary">#FF121212</item>
        <item name="colorSurface">#FFF9F9F9</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:fontFamily">@font/velasans_bold</item>
        <item name="android:textSize">45dp</item>
    </style>
</resources>