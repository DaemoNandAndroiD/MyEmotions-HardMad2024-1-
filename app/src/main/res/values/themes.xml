<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HardMad20241" parent="Theme.Material3.Dark.NoActionBar" />
    <style name="Theme.AppCompat.NoActionBar"/>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/velasans_medium</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/velasans_regular</item>
    </style>

    <style name="BaseTheme.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="materialClockStyle">@style/AppTheme.Widget.TimePicker.Clock</item>
        <item name="borderlessButtonStyle">@style/borderlessButtonStyle</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="chipStyle">@style/BaseTheme.Widget.Chip</item>
        <item name="materialTimePickerTitleStyle">@font/velasans_bold</item>
        <item name="colorSurface">@color/default_gray</item>
    </style>

    <style name="ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTheme.Widget.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
    </style>


    <style name="AppTheme.Widget.TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/white</item>
        <item name="clockHandColor">@color/default_gray</item>
        <item name="clockNumberTextColor">@color/black</item>
    </style>

    <style name="borderlessButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>